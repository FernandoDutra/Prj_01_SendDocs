<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Dados -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ID Usuário  -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ID Usuário"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/activity_usuario_et_idusuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textSize="20sp" />

        <!-- Nome  -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/activity_usuario_et_nome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textSize="20sp" />

        <!-- E-mail  -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="E-Mail"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/activity_usuario_et_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:textSize="20sp" />

        <!-- Senha  -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Senha"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/activity_usuario_et_senha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textSize="20sp" />

        <!-- Senha a Confirmar  -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Senha para Confirmar"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/activity_usuario_et_senhaconfirmar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textSize="20sp" />

        <!-- Nível de Acesso  -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nível de Acesso"
            android:textSize="20sp" />

        <Spinner
            android:id="@+id/activity_usuario_sp_nivelacesso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/nivelacesso_arrays"
            android:inputType="text"
            android:textSize="20sp" />

    </LinearLayout>

    <!-- Botões -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/activity_usuario_bt_cancelar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancelar" />

        <Button
            android:id="@+id/activity_usuario_bt_salvar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Salvar" />

    </LinearLayout>

</LinearLayout>